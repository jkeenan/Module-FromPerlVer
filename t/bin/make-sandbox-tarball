#!/usr/bin/env bash

set -v;

cd "$(dirname $0)/../..";

init=(
    'rm -rf'
    'mkdir'
    'git init'
    'cd'
);

for i in "${init[@]}"
do
    $i ./sandbox;
done

echo -e ".git.tar\n?[^.]" > .gitignore;
git add .gitignore;
git commit -m'.gitignore';

for i in ../version/*; 
do
    (
        cd $i;
        find . | cpio -pdv ~-;
    );

    echo -e "$i\n$(ls -al)";
   
    git add *;
    git commit -m"$i";
    git tag -a "perl/$(basename $i)" -m"$i";
    git commit -m"tag $i";

    rm -rf *;
done

# remove any cruft, push the empty head.
rm -rf *;
git add .;
git commit -m'empty directory';

tar cf .git.tar .git;

# push fake sandbox into module's git.
# .gitignore avoids issues with
# submodule.

cd ..;
git add sandbox;
git commit -m'minimal sandbox for t/2*';

exit 0;

